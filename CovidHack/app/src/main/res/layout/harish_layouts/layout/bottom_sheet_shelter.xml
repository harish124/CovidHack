<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_shelter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="160dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:background="#E8E8E8"
    android:elevation="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"

        android:id="@+id/linear1"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <View
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="6dp"
            android:background="@drawable/horizontal_bar"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shelter Finder"
            android:paddingTop="15dp"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:paddingBottom="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slide to select search radius"
                android:id="@+id/shelter_help"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="15dp"
                />
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:progressDrawable="@drawable/seek_bar"
                android:thumb="@drawable/seek_thumb"
                android:max="200"
                android:progress="100"
                />
<!--            <Button-->
<!--                android:id="@+id/plot"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textAlignment="center"-->
<!--                android:text="SEARCH"/>-->
<!--            <Spinner-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textAlignment="center"-->
<!--                android:layout_gravity="center"-->
<!--                android:gravity="center"-->
<!--                android:background="@color/backgroundColor"-->
<!--                android:id="@+id/distance"-->
<!--                />-->



        </LinearLayout>

    </LinearLayout>

    <!--Below Linear layout is the schema for recycler view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="@+id/linear1"
        app:layout_constraintHorizontal_bias="1.0"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@+id/linear1"
        app:layout_constraintTop_toBottomOf="@+id/linear1"
        android:visibility="invisible"
        android:id="@+id/shelter_details_linear">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:orientation="vertical"

            android:paddingHorizontal="7dp"
            android:paddingVertical="10dp"

            >

            <TextView
                android:id="@+id/sheltername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="10dp"

                android:text="SHELTER NAME"

                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"

                android:text="address"

                android:textColor="#000000"
                android:textSize="18sp"
                />


            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"

                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1"
                />

            <TextView
                android:id="@+id/openinghrs"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="closed"

                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginHorizontal="10dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/directions"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_gravity="right"
                android:layout_marginRight="20dp"

                android:background="@mipmap/direction_icon"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>